{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "../",
        "outDir": "./out-tsc",
        "experimentalDecorators": true,
        "target": "ES2022",
        "module": "ES2022",
        "lib": [
            "ES2022",
            "dom"
        ],
        "types": [
            "@angular/localize"
        ]
    },
    "angularCompilerOptions": {
        "enableI18nLegacyMessageIdFormat": false,
        "strictInjectionParameters": true,
        "strictInputAccessModifiers": true,
        "strictTemplates": true
    }
}
